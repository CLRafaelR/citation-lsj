  <macro name="container-contributors">
    <choose>
      <if type="chapter paper-conference" match="any">
        <names variable="editor translator" delimiter=", " suffix=", ">
          <name and="symbol" initialize="false" delimiter=", " />
          <label form="short" prefix=" (" text-case="title" suffix=")" />
        </names>
      </if>
    </choose>
  </macro>

  <macro name="container-contributors-ja">
    <choose>
      <if type="paper-conference chapter" match="any">
        <names variable="editor" suffix="（編）">
          <name delimiter="・" />
        </names>
      </if>
      <else></else>
    </choose>
  </macro>

  <macro name="secondary-contributors">
    <choose>
      <if type="article-journal chapter paper-conference" match="none">
        <names variable="translator editor" delimiter=", ">
          <name and="symbol" initialize="false" delimiter=", " />
          <label form="short" prefix=" (" suffix=")," text-case="title" />
        </names>
      </if>
    </choose>

  </macro>

  <macro name="secondary-contributors-ja">
    <group prefix="（" suffix="）" delimiter="・">
      <!-- 
      <choose>
        <if type="chapter" match="any">
          <names variable="editor" suffix="編">
            <name delimiter="・" />
          </names>
        </if>
      </choose>
      -->
      <names variable="translator" suffix="訳">
        <name delimiter="・" />
      </names>
    </group>
  </macro>


  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all"
        et-al="text"
        and="symbol"
        sort-separator=", "
        initialize="false"
        et-al-use-last="false"
        delimiter=", "
        et-al-min="6"
        delimiter-precedes-last="always" />
      <label form="short" prefix=" (" suffix=")" text-case="lowercase" />
      <substitute>
        <names variable="editor" />
        <names variable="translator" />
        <choose>
          <if type="report">
            <text variable="publisher" />
            <text macro="title" />
          </if>
          <else>
            <text macro="title" />
          </else>
        </choose>
      </substitute>
    </names>
  </macro>

  <macro name="author-ja">
    <!--
    <option name="et-al-min" value="6"/>
    <option name="et-al-use-first" value="6"/>
    -->
    <names variable="author">
      <name name-as-sort-order="all"
        et-al="text"
        sort-separator=", "
        et-al-use-last="false"
        delimiter="・"
        delimiter-precedes-last="always" />

      <substitute>
        <names variable="editor">
          <name delimiter="・" suffix="（編）" />
        </names>
        <names variable="translator">
          <name delimiter="・" suffix="（訳）" />
        </names>
        <text macro="title" />
      </substitute>
    </names>
  </macro>


  <macro name="author-short">
    <names variable="author">
      <name form="short" and="symbol" delimiter=", " initialize="false" />
      <substitute>
        <names variable="editor" />
        <names variable="translator" />
        <choose>
          <if type="report">
            <text variable="publisher" />
            <group font-style="italic">
              <text variable="title" form="short" />
            </group>
          </if>
          <else-if type="bill book graphic legal_case legislation motion_picture song" match="any">
            <group font-style="italic">
              <text variable="title" form="short" />
            </group>
          </else-if>
          <else>
            <text variable="title" form="short" quotes="true" />
          </else>
        </choose>
      </substitute>
    </names>
  </macro>

  <macro name="author-short-ja">
    <names variable="author">
      <name form="short" delimiter="・" include-period="true"
        initialize="false" delimiter-precedes-last="never" suffix="" />
      <substitute>
        <names form="short" variable="editor" />
        <names form="short" variable="translator" />
        <choose>
          <if type="book">
            <group>
              <text variable="title" form="short" />
            </group>
          </if>
          <else>
            <text variable="title" form="short" />
          </else>
        </choose>
      </substitute>
    </names>
  </macro>


  <macro name="access">
    <choose>
      <if type="thesis">
        <choose>
          <if variable="archive" match="any">
            <group>
              <text term="retrieved" text-case="capitalize-first" suffix=" " />
              <text term="from" suffix=" " />
              <text variable="archive" suffix="." />
              <text variable="archive_location" prefix=" (" suffix=")" />
            </group>
          </if>
          <else>
            <group>
              <text term="retrieved" text-case="capitalize-first" suffix=" " />
              <text term="from" suffix=" " />
              <text variable="URL" />
            </group>
          </else>
        </choose>
      </if>
      <else>
        <choose>
          <if variable="DOI">
            <text variable="DOI" prefix="doi:" />
          </if>
          <else>
            <choose>
              <if type="webpage">
                <group delimiter=" ">
                  <text term="retrieved" text-case="capitalize-first" suffix=" " />
                  <group>
                    <date variable="accessed" form="text" suffix=", " />
                  </group>
                  <text term="from" />
                  <text variable="URL" />
                </group>
              </if>
              <else>
                <group>
                  <text term="retrieved" text-case="capitalize-first" suffix=" " />
                  <text term="from" suffix=" " />
                  <text variable="URL" />
                </group>
              </else>
            </choose>
          </else>
        </choose>
      </else>
    </choose>

  </macro>

  <macro name="access-ja">
