  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number variable="edition" form="ordinal" />
          <text term="edition" form="short" />
        </group>
      </if>
      <else>
        <text variable="edition" suffix="." />
      </else>
    </choose>
  </macro>

  <macro name="edition-ja">
    <choose>
      <if type="book chapter" match="any">
        <choose>
          <if variable="edition">
            <group delimiter=", ">
              <text variable="edition" />
              <choose>
                <if type="chapter" match="none">
                  <group>
                    <text variable="collection-number" suffix=", " />
                    <text variable="collection-title" />
                  </group>
                </if>
              </choose>
            </group>
          </if>
        </choose>
      </if>
    </choose>
  </macro>


  <macro name="locators">
    <choose>
      <if type="article-journal article-magazine" match="any">
        <group prefix=", " delimiter=", ">
          <group>
            <group>
              <text variable="volume" />
            </group>
            <text variable="issue" prefix="(" suffix=")" />
          </group>
          <text variable="page" />
        </group>
      </if>
      <else-if type="article-newspaper">
        <group delimiter=" " prefix=", ">
          <label variable="page" form="short" />
          <text variable="page" />
        </group>
      </else-if>
      <else-if type="book graphic motion_picture report song chapter paper-conference" match="any">
        <group prefix=" (" suffix=")" delimiter=", ">
          <text macro="edition" />
          <group>
            <text term="volume" form="short" plural="true" text-case="capitalize-first" suffix=" " />
            <number variable="number-of-volumes" form="numeric" prefix="1-" />
          </group>
          <group>
            <text term="volume" form="short" text-case="capitalize-first" suffix=" " />
            <number variable="volume" form="numeric" />
          </group>
          <group>
            <label variable="page" form="short" suffix=" " />
            <text variable="page" />
          </group>
        </group>
      </else-if>
      <else-if type="legal_case">
        <group prefix=" (" suffix=")" delimiter=" ">
          <text variable="authority" />
          <date variable="issued" form="text" />
        </group>
      </else-if>
      <else-if type="bill legislation" match="any">
        <date variable="issued" prefix=" (" suffix=")">
          <date-part name="year" />
        </date>
      </else-if>
    </choose>
  </macro>

  <macro name="locators-ja">
    <choose>
      <if type="article-journal article-magazine chapter" match="any">
        <group delimiter=": " suffix=". ">
          <group>
            <choose>
              <if variable="volume">
                <group>
                  <text variable="volume" />
                </group>
                <text variable="issue" prefix="(" suffix=")" />
              </if>
              <else>
                <group font-style="italic">
                  <text variable="issue" />
                </group>
              </else>
            </choose>
          </group>
          <text variable="page" />
        </group>
      </if>
      <if type="article-newspaper" match="any">
        <group delimiter=", " suffix="">
          <group>
            <group font-style="italic">
              <text variable="volume" />
            </group>
            <text variable="issue" prefix="（" suffix="）" />
          </group>
          <text variable="page" prefix="第 " suffix=" 版" />
        </group>
      </if>
      <else-if type="legal_case">
        <group prefix="（" suffix="）" delimiter=" ">
          <text variable="authority" />
          <date variable="issued" form="text" />
        </group>
      </else-if>
      <else-if type="bill legislation" match="any">
        <date variable="issued" prefix="（" suffix="）">
          <date-part name="year" />
        </date>
      </else-if>

    </choose>


  </macro>


  <macro name="citation-locator">
    <group>
      <choose>
        <if locator="chapter">
          <label variable="locator" form="long" text-case="capitalize-first" />
        </if>
        <else>
          <label variable="locator" form="short" />
        </else>
      </choose>
      <text variable="locator" prefix=" " />
    </group>
  </macro>

  <macro name="citation-locator-ja">
    <group>
      <text variable="locator" suffix="頁" />
    </group>
  </macro>


  <macro name="container">
    <group delimiter=" ">
      <choose>
        <if type="chapter paper-conference entry-encyclopedia" match="any">
          <text term="in" text-case="capitalize-first" suffix=" " />
        </if>
      </choose>
      <text macro="container-contributors" />
      <text macro="secondary-contributors" />
      <text macro="container-title" font-style="italic" />
    </group>
  </macro>


  <macro name="container-title">
    <choose>
      <if type="article article-journal article-magazine chapter article-newspaper" match="any">
        <group font-style="italic">
          <text variable="container-title" text-case="title" />
        </group>
      </if>
      <else-if type="bill legal_case legislation" match="none">
        <group font-style="italic">
          <text variable="container-title" />
        </group>
      </else-if>
      <else>
        <group delimiter=" " prefix=", ">
          <choose>
            <if variable="container-title">
              <text variable="volume" />
              <group font-style="italic">
                <text variable="container-title" />
              </group>
              <group delimiter=" ">
                <!--change to label variable="section" as that becomes available -->
                <text term="section" form="symbol" />
                <text variable="section" />
              </group>
              <text variable="page" />
            </if>
            <else>
              <choose>
                <if type="legal_case">
                  <text variable="number" prefix="No. " />
                </if>
                <else>
                  <text variable="number" prefix="Pub. L. No. " />
                  <group delimiter=" ">
                    <!--change to label variable="section" as that becomes available -->
                    <text term="section" form="symbol" />
                    <text variable="section" />
                  </group>
                </else>
              </choose>
            </else>
          </choose>
        </group>
      </else>
    </choose>
  </macro>


  <macro name="japanese-bibliography">

    <!-- <text macro="japanese-sort" /> -->

    <text macro="author-ja" suffix="" />
    <text macro="issued-ja" suffix="" />
    <group>
      <choose>
        <if type="book" match="any">
          <group prefix="『" suffix="』">
            <text macro="title-ja" />
          </group>
          <choose>
            <if variable="collection-title">
              <group prefix=", " suffix=". ">
                <text variable="collection-title" />
                <text variable="volume" prefix="第" suffix="巻" />
              </group>
            </if>
          </choose>
        </if>
        <else-if type="thesis">
          <group prefix="「" suffix="」博士論文, ">
            <text macro="title-ja" />
          </group>
        </else-if>
        <else>
          <group prefix="「" suffix="」">
            <text macro="title-ja" />
          </group>
        </else>
      </choose>
      <text macro="container-contributors-ja" />
      <group delimiter="">
        <choose>
          <if type="book" match="none">
            <text macro="container-title-ja" />
            <group>
              <text variable="collection-title" />
            </group>
          </if>
          <else type="chapter conference-chapter" match="any">
            <!-- <group prefix="「" suffix="」">
                <text macro="title-ja" />
              </group> -->

            <group>
              <text macro="container-title-ja" />
            </group>
          </else>
        </choose>
        <text macro="locators-ja" />
      </group>
      <choose>
        <if type="paper-conference" match="any">
          <group delimiter=", ">
            <group delimiter=", ">
              <text variable="publisher" />
              <text variable="publisher-place" />
            </group>
            <group>
              <date variable="issued">
                <date-part name="year" suffix="年" />
                <date-part form="numeric" name="month" suffix="月" />
                <date-part prefix="" name="day" suffix="日" />
              </date>
            </group>
          </group>
        </if>
        <else>
          <text macro="publisher-ja" />
        </else>
      </choose>
    </group>
    <!-- <text macro="access-ja"/> -->
  </macro>

  <macro name="container-title-ja">
    <group prefix="『" suffix="』">
      <text variable="container-title" />
    </group>
    <choose>
      <if type="paper-conference" match="any">
        <text variable="page" prefix="（頁" suffix="）" />
      </if>
    </choose>

  </macro>


  <macro name="japanese-sort">
    <choose>
      <if locale="en-GB en English english Anglais" match="any">
        <text value="2" />
      </if>
      <else-if locale="ja-JP ja-jp Japanese japanese" match="any">
        <text value="1" />
      </else-if>
      <else-if variable="language" match="none">
        <text value="2" />
      </else-if>
      <else>
        <text value="2" />
      </else>
    </choose>

    <!-- <text value=" | "/> -->
  </macro>

  <macro name="author-sort">
    <choose>
      <if locale="en-GB en English english Anglais" match="any">
        <text macro="author" />
      </if>
      <else-if locale="ja-JP ja-jp Japanese japanese" match="any">
        <text macro="author-ja" />
      </else-if>
      <else-if variable="language" match="none">
        <text macro="author" />
      </else-if>
      <else>
        <text macro="author" />
      </else>
    </choose>

    <!-- <text value=" | "/> -->
  </macro>

  <citation et-al-min="6"
    et-al-use-first="1"
    et-al-subsequent-min="3"
    et-al-subsequent-use-first="1"
    disambiguate-add-year-suffix="true" disambiguate-add-names="true"
    disambiguate-add-givenname="true" collapse="year"
    givenname-disambiguation-rule="primary-name">

    <sort>
      <key macro="japanese-sort" sort="ascending" />
      <key macro="author" />
      <key macro="issued-sort" />
    </sort>

    <layout>
      <choose>
        <if variable="language">
          <!-- <layout locale="Japanese" prefix="（" suffix="）" delimiter="；"> -->
          <group delimiter="，" prefix="（" suffix="）">
            <text macro="author-short-ja" />
            <text macro="issued-year-ja" />
            <text macro="citation-locator-ja" />
          </group>
        </if>
        <else>
          <!-- <layout prefix="(" suffix=")" delimiter="; "> -->
          <group delimiter=", " prefix=" (" suffix=") ">
            <text macro="author-short" />
            <text macro="issued-year" />
            <text macro="citation-locator" />
          </group>
        </else>
      </choose>
    </layout>
  </citation>

  <bibliography hanging-indent="true"
    et-al-min="8"
    et-al-use-first="6"
    et-al-use-last="true"
    entry-spacing="0"
    line-spacing="1.5">
    <sort>
      <key macro="japanese-sort" sort="ascending" />
      <key macro="author" sort="ascending" />
      <!-- <key macro="author-sort" sort="ascending"/> -->
      <!-- <key variable="language" sort="descending"/> -->

      <key macro="issued-sort" sort="ascending" />
      <key macro="title" />
    </sort>


    <layout>
      <choose>
        <!-- 和文参考文献一覧のスタイル -->
        <if variable="language" match="any">
          <text macro="japanese-bibliography" />
        </if>
        <!-- 欧文参考文献一覧のスタイル -->
        <else>
          <group suffix=".">
            <group delimiter=" ">
              <text macro="author" />
              <text macro="issued" />
              <text macro="title" suffix=". " />
              <text macro="container" />
            </group>
            <text macro="locators" />
            <choose>
              <if type="paper-conference" match="any">
                <group delimiter=", " prefix=" ">
                  <group delimiter=", " prefix=". ">
                    <text variable="publisher" />
                    <text variable="publisher-place" />
                  </group>
                  <group>
                    <date variable="issued" delimiter=" ">
                      <date-part prefix="" name="day" />
                      <date-part form="text" name="month" />
                      <date-part name="year" />
                    </date>
                  </group>
                </group>
              </if>
              <else>
                <text macro="publisher" prefix=" " />
              </else>
            </choose>
          </group>
          <text macro="access" prefix=" " />
        </else>
      </choose>
    </layout>
  </bibliography>

