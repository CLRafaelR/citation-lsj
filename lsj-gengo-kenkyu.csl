                <text variable="event" />
              </if>
              <else>
                <group delimiter=" ">
                  <text variable="genre" text-case="capitalize-first" />
                  <text term="presented at" />
                  <text variable="event" />
                </group>
              </else>
            </choose>
          </if>
        </choose>
      </if>
    </choose>
  </macro>

  <macro name="event-ja">
